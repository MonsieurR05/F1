---
// JavaScript version of standings.astro (no TypeScript)
import Layout from '../layouts/Layout.astro';
import StandingsView from '../components/StandingsView.jsx';
---

<Layout title="F1 2024 Standings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">2024 Championship Standings</h1>
      <p class="text-f1-gray text-lg">Driver and Constructor championship standings</p>
    </div>
    
    <StandingsView client:load />
  </div>
</Layout>
